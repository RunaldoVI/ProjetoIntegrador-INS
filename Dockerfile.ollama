FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    curl \
    bash \
    ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Instalar Ollama
RUN curl -fsSL https://ollama.com/install.sh | bash

# ⚠️ Puxar modelo mistral durante build
RUN ollama serve & sleep 3 && ollama pull mistral && pkill ollama

EXPOSE 11434

CMD ["ollama", "serve"]